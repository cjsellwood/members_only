<%- layout("layout/boilerplate") %>
<h1>New Message</h1>
<form class="form wide" action="/newmessage" method="POST">
  <div>
    <label for="title">Title</label>
    <input id="title" name="title" type="text" required autofocus/>
  </div>
  <div>
    <label for="text">Message</label>
    <textarea id="text" name="text" type="text" required></textarea>
  </div>
  <button class="button save" type="submit">Submit</button>
</form>
